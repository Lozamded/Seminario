<h1>Fichas</h1>

<%= link_to 'Generar ficha', new_ficha_path %>

<table>
  <thead>
    <tr>
      <th>Propietario</th>
      <th>Tipo</th>
      <th>Edad</th>
      <th>Rut</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th>Email</th>
      <th>Perros</th>
      <th>Gatos</th>
      <th>Se entero por</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fichas.each do |ficha| %>
      <tr>
        <td><%= ficha.nombre %></td>
        <td><%= ficha.tipo %></td>
        <td><%= ficha.edad %></td>
        <td><%= ficha.rut %></td>
        <td><%= ficha.telefono %></td>
        <td><%= ficha.direccion %>, <%= ficha.comuna %> </td>
        <td><%= ficha.email %></td>
        <td>
          <% if ficha.perros.count == 1%>
            <%= ficha.perros.first.nombre%>
          <%else%>
            <%= ficha.perros.count%>
          <%end%>
        </td>
        <td>
          <% if ficha.gatos.count == 1%>
            <%= ficha.gatos.first.nombre%>
          <%else%>
            <%= ficha.gatos.count%>
          <%end%>
        </td>
        <td><%=ficha.medio_encuentro%><td>
        <td><%= link_to 'Show', ficha, :remote=>true %></td>
        <td><%= link_to 'Edit', edit_ficha_path(ficha) %></td>
        <td><%= link_to 'Destroy', ficha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Ver perros ', perros_path %>(<%=Perro.count%>)|
<%= link_to ' Ver gatos', gatos_path %>(<%=Gato.count%>)


<div id ="new-ficha" style = "display:noone;"></div>
<div id ="edit-ficha" style = "display:noone;"></div>
<div id ="show-ficha" style = "display:noone;"></div>

