<p id="notice"><%= notice %></p>

<h1>Enfermedades</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enfermedades.each do |enfermedade| %>
      <tr>
        <td><%= enfermedade.nombre %></td>
        <td><%= link_to 'Show', enfermedade %></td>
        <td><%= link_to 'Edit', edit_enfermedade_path(enfermedade) %></td>
        <td><%= link_to 'Destroy', enfermedade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

