<%= form_with(model: documento, local: true) do |form| %>
  <% if documento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(documento.errors.count, "error") %> prohibited this documento from being saved:</h2>

      <ul>
      <% documento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :documento_nombre %>
  </div>

  <div class="field">
    <%= form.label :tipo %>
    <%= form.select :tipo, ['Documento','Protocolo'] %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file, id: :documento_file %>
  </div>

  <div class="field">
    <%= form.label :link %>(si se descarga desde otra pagina)
    <%= form.text_field :link, id: :documento_link %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
